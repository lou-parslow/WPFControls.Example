<Window x:Class="Controls.Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Controls.Demo"
        xmlns:view="clr-namespace:Controls.View;assembly=Controls"
        mc:Ignorable="d"
        Title="Controls.Demo" Height="450" Width="550">
    <Window.DataContext>
        <local:VM />
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Label>Backend</Label>
            <ComboBox ItemsSource="{Binding BackendNames}" SelectedItem="{Binding BackendName}" />
            <Label Content="{Binding Backend.Description}" />
        </StackPanel>
        <view:Contacts Grid.Row="1" DataContext="{Binding Backend}" />
    </Grid>
</Window>